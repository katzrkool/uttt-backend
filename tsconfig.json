{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "bin",
        "removeComments": true,
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}